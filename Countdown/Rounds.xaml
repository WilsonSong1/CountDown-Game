<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Countdown.Rounds"
             Title="Rounds"
             BackgroundColor="CornflowerBlue">
    <VerticalStackLayout
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Label Text="Please select the number of rounds you would like"
               FontSize="30"/>
        <Label x:Name="roundNumber"
               FontSize="30"
               Text="Number of Rounds: 3"
               HorizontalOptions="Center"/>
        <Slider Maximum="5"
                ValueChanged="slide"/>
        <Button x:Name="roundsBtn"
                Clicked="roundsSet"
                Text="Save"
                BackgroundColor="White"
                MaximumWidthRequest="150"
                MinimumHeightRequest="40"/>
    </VerticalStackLayout>
</ContentPage>